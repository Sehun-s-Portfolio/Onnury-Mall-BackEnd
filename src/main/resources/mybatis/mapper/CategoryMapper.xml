<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.onnury.mapper.CategoryMapper">

    <!-- 중분류, 소분류 기준 제품 페이지 제품 리스트 조회에 필요한 요청 카테고리 그룹값 조회 -->
    <select id="getCategoryGroupValue" parameterType = "Long" resultType="Integer">
        <!-- getCategoryGroupValue -->
        select category_group from category where caategory_id = #{categoryId};
    </select>

</mapper>