<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.onnury.mapper.MemberMapper">

    <!-- 회원 조회 -->
    <select id="getMemberByLoginId" parameterType="String" resultType="com.onnury.member.domain.Member">
        <!-- getMemberByLoginId -->
        select
            *
        from member
        <where>
            login_id = #{loginId}
        </where>
        limit 1;
    </select>

</mapper>