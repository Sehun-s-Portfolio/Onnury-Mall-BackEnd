<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.onnury.mapper.BrandMapper">

    <!-- 중/소분류 제품 리스트 페이지에 같이 노출될 연관 브랜드 리스트 정보 -->
    <select id="getMiddleAndDownCategoryProductsRelatedBrandList" parameterType="Map"
            resultType="com.onnury.brand.response.BrandDataResponseDto">
        select
            b.brand_id as brandId,
            b.brand_title as brandTitle
        from
            brand b
        where
            b.brand_id in
            (select
                cib.brand_id
            from
                category_in_brand cib
            where
                cib.category_in_brand_id in
                <foreach collection="relatedCategoryInBrandIdList" item="relatedCategoryInBrandId" index="index" open="(" close=")" separator=",">
                    #{relatedCategoryInBrandId}
                </foreach>
            group by
                cib.brand_id)
    </select>

</mapper>