<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.onnury.mapper.BrandMapper">

    <!-- 필터링 조건으로 노출시킬 중,소분류 제품들이 가지고 있는 브랜드 id 리스트 -->
    <select id="getMiddleAndDownProductsBrandList" parameterType="Map"
            resultType="com.onnury.brand.response.BrandDataResponseDto">
        select
            b.brand_id,
            b.brand_title,
            b.status,
            null as img_url
        from
            brand b
        where
            b.brand_id in
            (select
                 brand_id
             from
                 category_in_brand
             where
                 category_in_brand_id in
                 <foreach collection="categoryInBrandIdList" item="categoryInBrandId" index="index" open="(" close=")" separator=",">
                    #{categoryInBrandId}
                </foreach>
             group by
                 brand_id);
    </select>

</mapper>